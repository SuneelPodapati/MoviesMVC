@model MMDB.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h1>
    @Model.MovieName
</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.YearOfRelease)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.YearOfRelease)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Producer.ProducerName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Producer.ProducerName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Actors)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Actors)
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <img src="@Model.Poster" style="border: 2px solid red; border-radius: 5px;" height="200" width="100%" alt="@Model.MovieName" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(m => m.Plot)
            </dt>

            <dd>
                @Html.TextAreaFor(m => m.Plot, 10, 200, new { @class = "form-control", height = "300", width = "100%", style = " background-color:white", disabled = "disabled" })
            </dd>
        </dl>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MovieId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
